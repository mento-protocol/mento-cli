{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2017",
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "ts-node": {
    "esm": true
  },
  "baseUrl": ".",
  "paths": {
    "@/*": ["./src/*"]
  }
}
